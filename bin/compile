#!/bin/sh
# usage: bin/compile <build-dir> <cache-dir>

set -e

echo "-----> BUILD: $1"
echo "-----> CACHE: $2"

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
ver=1.0.2
file=go$ver.linux-amd64.tar.gz
url=http://go.googlecode.com/files/$file
buildpack=$(dirname $(dirname $0))

# Python
venv=$cache/venv
mkdir -p $cache/pip
python=python2.7
PATH=$venv/bin:$PATH

virtualenv() {
    python "$buildpack/vendor/virtualenv-1.7/virtualenv.py" "$@"
}

if ! test -f $build/.godir
then
    echo >&2 '-----> ERROR: Please create .godir'
    echo >&2 '-----> See https://gist.github.com/299535bbf56bf3016cba for instructions'
    exit 1
fi

if test -e $build/bin && ! test -d $build/bin
then
    echo >&2 '-----> ERROR: File bin exists and is not a directory.'
    exit 1
fi

echo "-----> Using Go $ver"

(
    set -e

    # Already cached?
    test -d $cache/go-$ver/go && exit

    rm -rf $cache/* # be sure not to build up cruft
    mkdir -p $cache/go-$ver
    cd $cache/go-$ver
    echo "-----> Fetching Go $ver"
    curl -sO $url
    tar zxf $file
    rm -f $file
)

GOROOT=$cache/go-$ver/go export GOROOT
#GOPATH=$build/.heroku/g export GOPATH
GOPATH=/app/tmp/repo.git/ export GOPATH
PATH=$GOROOT/bin:$build/bin:/app/bin:$PATH export PATH

echo "GOPATH: $GOPATH"

echo "-----> Checking for Mercurial and Bazaar"
(
    set -e
    which hg && which bzr && which git exit
    echo "Installing Mercurial and Bazaar"

    virtualenv --python $python --distribute --never-download --prompt='(venv) ' $venv
    if [ "$?" -ne 0 ]; then
        echo "Warning: Python environment corrupted. Rebuilding"
        rm -rf $venv/* || true
        virtualenv --python $python --distribute --never-download --prompt='(venv) ' $venv
    fi
    . $venv/bin/activate

    pip install --use-mirrors mercurial
    pip install --use-mirrors bzr
    pip install --use-mirrors git
) 2>&1 | sed -u 's/^/       /'

#git --version

name=$(cat $build/.godir)
p=$GOPATH/src/$name
mkdir -p $p
cp -R $build/* $p

unset GIT_DIR # unset git dir or it will mess with goinstall

echo "-----> Running go get (protobuf)"
cd $p
go get code.google.com/p/goprotobuf/proto #{proto,protoc-gen-go}
go get code.google.com/p/goprotobuf/protoc-gen-go

echo "-----> Building protobufs"
# Move stuff to a dir which should be in the PATH environment variable
bin_dir=/app/.heroku/vendor/bin
mkdir -p $bin_dir
mv $GOPATH/bin/* $bin_dir
make protos

echo "-----> Running go get (bmizerany/pq)"
# Dirty hax
git clone git://github.com/bmizerany/pq $GOPATH/src/github.com/bmizerany/pq
echo "*** Cloned bmizerany! ***"
go get github.com/bmizerany/pq

echo "-----> Running go get (app)"
pwd
export GOPATH=`pwd`
echo $GOPATH
go get ./frontend
# Finally, move compiled binary to $build/bin
# Heroku will move the contents of this dir to /app/bin afterwards.
mkdir -p $build/bin
mv $GOPATH/bin/* $build/bin

GIT_SSL_NO_VERIFY=true rm -rf $build/.heroku # Does this need to be deleted?
